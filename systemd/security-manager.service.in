[Unit]
Description=Start the security manager
Conflicts=security-manager-master.service security-manager-slave.service
ConditionVirtualization=no
ConditionPathExists=!/opt/usr/.zone/enabled

[Service]
Type=notify
ExecStart=@BIN_INSTALL_DIR@/security-manager

Sockets=security-manager.socket

[Install]
WantedBy=multi-user.target
